{% extends "UsersUserManageBundle::layout.html.twig" %}
{% block content %}
<script type="text/javascript" src="{{ asset('bundles/UsersUserManage/js/account.js') }}"></script> 
  <!--  start Mid-section Code -->
  <div class="mid-section">
    {# Including Side Bar  #}
    {% include "UsersUserManageBundle::sidebar.html.twig" %}
    <div class="right-panel">
     {{ form_start(form) }}
      <div class="heading">
        <h1>{{title}}</h1> 
      </div>
           <div> {{usertype}} </div>
      {% if usertype == 2 and id is not defined %}
      <div class="form-box">
        <div class="form-head">State format</div>
          <div class="col" style='border:0px solid #000000;width:87%'>
              <div  style='border:0px solid #000000;width:100%'>
                <div class="ui-ctrl">
                  {{ form_widget(form.state_format) }}
                </div>
                <div class="clear"></div>
              </div>
            <div >&nbsp;</div>
            <div>
              <div class="ui-ctrl" > {{ form_widget(form.kr_was_clients) }}</div>
              <div class="clear"></div>
            </div>             
          </div>
        <div class="clear"></div>
      </div>
	  {% endif %}
      <div class="form-box">
        <div class="form-head">Company Details</div>
        <div class="col">
          <div class="form-control">
            <label><span class="red">*</span>Company Name</label>
			 <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.name,{'value':account.name}) }}
			 {% else %}
              {{ form_widget(form.name) }}
			 {% endif %}
			</div>
             <span id='no_li_css'>{{ form_errors(form.name) }} </span>
            <div class="clear"></div>
          </div>
          
          <div class="form-control">
          <label><span class="red">*</span>Address</label>
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.address,{'value':account.address}) }}
			{% else %}
			  {{ form_widget(form.address) }}
			{% endif %}
			</div>
            <span id='no_li_css'>{{ form_errors(form.address) }} </span>
            <div class="clear"></div>
          </div>
          
          <div class="form-control">
            {{ form_label(form.state_id) }}
            <div class="ui-ctrl">{{ form_widget(form.state_id) }}</div>
            <span id='no_li_css'>{{ form_errors(form.state_id) }} </span>
            <div class="clear"></div>
          </div>
          
          <div class="form-control">
            <label><span class="red">*</span>Zip Code</label>
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.zip_code,{'value':account.zipCode}) }}
			{% else %}
			  {{ form_widget(form.zip_code) }}
			{% endif %}
			</div>
            <span id='no_li_css'>{{ form_errors(form.zip_code) }} </span>
            <div class="clear"></div>
          </div>

          <div class="form-control">
            <label><span class="red">*</span>Primary Phone</label>
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.primary_phone,{'value':account.primaryPhone}) }}
			{% else %}
			  {{ form_widget(form.primary_phone) }}
			{% endif %}
			</div>
            <span id='no_li_css'>{{ form_errors(form.primary_phone) }} </span>
            <div class="clear"></div>
          </div>
		  
		  <div class="form-control">
              {{ form_label(form.file) }}
             <div class="ui-ctrl">{{ form_widget(form.file) }}</div>
             <div class="clear"></div>
          </div>

        </div>
        <div class="col">
          <div class="form-control">
           {{ form_label(form.status) }}
            <div class="ui-ctrl">{{ form_widget(form.status) }}</div>
            <div class="clear"></div>
          </div>
          <div class="form-control">
             {{ form_label(form.address2) }}
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.address2,{'value':account.address2}) }}
			{% else %}
			  {{ form_widget(form.address2) }}
			{% endif %}
			</div>
            <div class="clear"></div>
          </div>
          <div class="form-control">
            <label><span class="red">*</span>City</label>
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.city,{'value':account.city}) }}
			{% else %}
			  {{ form_widget(form.city) }}
			{% endif %}
			</div>
            <span id='no_li_css'>{{ form_errors(form.city) }} </span>
            <div class="clear"></div>
          </div>

          <div class="form-control">
            <label><span class="red">*</span>Email</label>
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.email,{'value':account.email}) }}
			{% else %}
			  {{ form_widget(form.email) }}
			{% endif %}
			</div>
            <span id='no_li_css'>{{ form_errors(form.email) }} </span>
            <div class="clear"></div>
          </div>

          <div class="form-control">
           {{ form_label(form.secondary_phone) }}
            <div class="ui-ctrl">
			 {% if id > 0  %}
			{{ form_widget(form.secondary_phone,{'value':account.secondaryPhone}) }}
			{% else %}
			  {{ form_widget(form.secondary_phone) }}
			{% endif %}
			</div>
            <div class="clear"></div>
          </div>
        </div>
         <div class="clear"></div>
          <div >
               <div class='reseller_submit_button'>
			    {{ form_widget(form.id,{'value':id}) }}
			    {% if id > 0  %}  
                   {{ form_widget(form.Edit) }} 
				{% else %}
                  {{ form_widget(form.Save) }}				  
				{% endif %} 
               </div>
              <div class="clear"></div>
            </div>         
        
        <div class="clear"></div>
      </div>

      {{ form_end(form) }}  
    </div>  
  </div>

<!--  End Mid-section Code-->
<div class="footer">Â© 2014 All Rights Reserved</div>
</div>
{% endblock %}